<Page x:Class="Prakt15.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Менеджер"
      Background="#dfeaeb" Width="1069">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" 
                Background="White" 
                CornerRadius="5"
                Padding="15"
                Margin="0,0,5,0">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <Label Foreground="#333333" FontWeight="Bold">Поиск товара</Label>
                    <TextBox x:Name="txtSearch"
                             Height="35"
                             FontSize="14"
                             Padding="5"
                             Background="White"
                             BorderBrush="#00C4B4"
                             BorderThickness="1"
                             Margin="0,0,0,15"
                             TextChanged="TxtSearch_TextChanged"/>

                    <Label Foreground="#333333" FontWeight="Bold" FontSize="16">Фильтры</Label>

                    <Label Foreground="#333333">Категория</Label>
                    <ComboBox x:Name="cmbCategory" 
                              Height="35"
                              FontSize="14"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              Margin="0,0,0,10"
                              SelectionChanged="CmbCategory_SelectionChanged"/>

                    <Label Foreground="#333333">Бренд</Label>
                    <ComboBox x:Name="cmbBrand"
                              Height="35"
                              FontSize="14"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              Margin="0,0,0,10"
                              SelectionChanged="CmbBrand_SelectionChanged"/>

                    <Label Foreground="#333333">Цена</Label>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBox x:Name="txtPriceFrom" 
                                 Width="80"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 Background="White"
                                 BorderBrush="#00C4B4"
                                 BorderThickness="1"
                                 Margin="0,0,5,0"
                                 TextChanged="TxtPrice_TextChanged"
                                 PreviewTextInput="TxtPrice_PreviewTextInput"/>
                        <Label Foreground="#333333" VerticalAlignment="Center">до</Label>
                        <TextBox x:Name="txtPriceTo" 
                                 Width="80"
                                 Height="35"
                                 FontSize="14"
                                 Padding="5"
                                 Background="White"
                                 BorderBrush="#00C4B4"
                                 BorderThickness="1"
                                 Margin="5,0,0,0"
                                 TextChanged="TxtPrice_TextChanged"
                                 PreviewTextInput="TxtPrice_PreviewTextInput"/>
                    </StackPanel>

                    <Label Foreground="#333333" FontWeight="Bold" FontSize="16" Margin="0,10,0,0">Сортировка</Label>
                    <ComboBox x:Name="cmbSort" 
                              Height="35"
                              FontSize="14"
                              Background="White"
                              BorderBrush="#00C4B4"
                              BorderThickness="1"
                              Margin="0,0,0,15"
                              SelectionChanged="CmbSort_SelectionChanged">
                        <ComboBoxItem Tag="Name">По названию</ComboBoxItem>
                        <ComboBoxItem Tag="PriceAsc">По цене (возрастание)</ComboBoxItem>
                        <ComboBoxItem Tag="PriceDesc">По цене (убывание)</ComboBoxItem>
                        <ComboBoxItem Tag="QuantityAsc">По количеству (возрастание)</ComboBoxItem>
                        <ComboBoxItem Tag="QuantityDesc">По количеству (убывание)</ComboBoxItem>
                    </ComboBox>

                    <Button x:Name="btnReset" 
                            Content="Сбросить фильтры" 
                            Background="#00b4c4"
                            Foreground="White"
                            FontWeight="Bold"
                            Height="40"
                            FontSize="14"
                            Padding="10,5"
                            Margin="0,0,0,20"
                            Click="BtnReset_Click"/>

                    <Border Background="#f0f0f0"
                            Padding="10"
                            CornerRadius="5"
                            Margin="0,10,0,0">
                        <StackPanel>
                            <Label Foreground="#333333" FontWeight="Bold" FontSize="16" Margin="0,0,0,10">Управление</Label>

                            <Button x:Name="btnAddProduct" 
                                    Content="Добавить товар"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnAddProduct_Click"/>

                            <Button x:Name="btnManageCategories" 
                                    Content="Управление категориями"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageCategories_Click"/>

                            <Button x:Name="btnManageBrands" 
                                    Content="Управление брендами"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageBrands_Click"/>

                            <Button x:Name="btnManageTags" 
                                    Content="Управление тегами"
                                    Background="#00C4B4"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    Height="40"
                                    FontSize="14"
                                    Padding="10,5"
                                    Margin="0,0,0,8"
                                    Click="BtnManageTags_Click"/>

                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Border Grid.Column="1" 
                Background="White" 
                CornerRadius="5"
                Padding="15"
                Margin="5,0,0,0">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Управление товарами" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,15"/>

                <ListView x:Name="listViewProducts" 
                          Grid.Row="1"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          SelectionChanged="ListViewProducts_SelectionChanged">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="2" 
                                    CornerRadius="5"
                                    Margin="0,0,0,10" 
                                    Padding="15"
                                    Background="White">

                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLowStock}" Value="True">
                                                <Setter Property="BorderBrush" Value="#ffd129"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding Name}" 
                                                       FontSize="18" 
                                                       FontWeight="Bold"
                                                       Foreground="#00C4B4"/>
                                            <TextBlock Text="{Binding Price, StringFormat='{}{0:C}'}" 
                                                       FontSize="16"
                                                       FontWeight="Bold"
                                                       Foreground="#333333"
                                                       Margin="20,0,0,0"/>
                                        </StackPanel>

                                        <TextBlock Margin="0,0,0,8" Foreground="#333333">
                                            <Run Text="рейтинг "/>
                                            <Run Text="{Binding Rating, StringFormat='{}{0:F1}'}"/>
                                        </TextBlock>

                                        <TextBlock Text="{Binding CategoryName}" 
                                                   Foreground="#333333"
                                                   Margin="0,0,0,8"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                            <TextBlock Text="{Binding Description}" 
                                                       Width="300"
                                                       TextWrapping="Wrap"
                                                       Foreground="#333333"/>
                                            <TextBlock Margin="20,0,0,0" Foreground="#333333">
                                                         <Run Text="Остаток: "/>
                                                         <Run Text="{Binding Stock}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" 
                                                VerticalAlignment="Center"
                                                Margin="10,0,0,0">
                                        <Button Content="Изменить"
                                                Background="#00C4B4"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35"
                                                FontSize="12"
                                                Padding="10,5"
                                                Margin="0,0,0,5"
                                                Tag="{Binding Id}"
                                                Click="BtnEditProduct_Click"/>
                                        <Button Content="Удалить"
                                                Background="#00C4B4"
                                                Foreground="White"
                                                FontWeight="Bold"
                                                Height="35"
                                                FontSize="12"
                                                Padding="10,5"
                                                Tag="{Binding Id}"
                                                Click="BtnDeleteProduct_Click"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Border Grid.Row="2" 
                        Background="#00C4B4" 
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,10,0,0">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="txtTotalCount" 
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                        <TextBlock Text="  |  " 
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="10,0"/>
                        <TextBlock x:Name="txtFilteredCount" 
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>